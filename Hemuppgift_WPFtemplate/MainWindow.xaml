<Window x:Class="Hemuppgift_WPFtemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemuppgift_WPFtemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Grid Button-->
        <Button x:Name="GridBtn" Content="Grid" 
                Click="GridBtn_Click"/>
        <!--StackPanel Button-->
        <Button x:Name="StackPanelBtn" Content="StackPanel" Grid.Column="2"
                Click="StackPanelBtn_Click"/>
        <!--WrapPanel Button-->
        <Button x:Name="WrapPanelBtn" Content="WrapPanel" Grid.Row="1"
                Click="WrapPanelBtn_Click"/>
        <!--DockPanel Button-->
        <Button x:Name="DockPanelBtn" Content="DockPanel" Grid.Row="1" Grid.Column="1"
                Click="DockPanelBtn_Click"/>

    </Grid>
</Window>

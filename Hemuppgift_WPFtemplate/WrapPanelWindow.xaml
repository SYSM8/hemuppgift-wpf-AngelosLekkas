<Window x:Class="Hemuppgift_WPFtemplate.WrapPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemuppgift_WPFtemplate"
        mc:Ignorable="d"
        Title="WrapPanelWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel x:Name="Stackpanel1" Orientation="Horizontal" Grid.Row="0">
            <RadioButton x:Name="HoriWrap" Click="HoriWrap_Click" Margin="5,0,0,0"/>
            <TextBlock Text="Horizontal" Margin="5,0,0,0"/>
            <RadioButton x:Name="VertWrap" Click="VertWrap_Click" Margin="5,0,0,0"/>
            <TextBlock Text="Vertical" Margin="5,0,0,0"/>

        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
          HorizontalScrollBarVisibility="Disabled" Grid.Row="1">
            <WrapPanel Orientation="Horizontal" Grid.Row="1" x:Name="WrapPanel" VerticalAlignment="Top">

                <Ellipse Fill="Red" Width="100" Height="100" Margin="5"/>
                <Ellipse Fill="Orange" Width="90" Height="90" Margin="5"/>
                <Ellipse Fill="Yellow" Width="80" Height="80" Margin="5"/>
                <Ellipse Fill="LightGreen" Width="70" Height="70" Margin="5"/>
                <Ellipse Fill="Green" Width="60" Height="60" Margin="5"/>
                <Ellipse Fill="LightBlue" Width="50" Height="50" Margin="5"/>
                <Ellipse Fill="Blue" Width="40" Height="40" Margin="5"/>
                <Ellipse Fill="Black" Width="30" Height="30" Margin="5"/>

            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>
